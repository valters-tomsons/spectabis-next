<Window
    Name="MainWindow"
    xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width = "1280"
    Height = "720"
    Title="Spectabis Next"
    x:Class="SpectabisUI.Views.MainWindow"
    >

    <Grid>
        <Grid RowDefinitions="Auto,*">
            <Grid Name="TitlebarContainer" Grid.Row="0">
                <Rectangle Name="Titlebar" Height="50"/>
                <StackPanel Name="TitlebarPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,15,0"/>
            </Grid>

            <ContentControl Grid.Row="1" Name="ContentContainer" />
        </Grid>

        <Grid IsVisible="{Binding ModalVisible}">
            <ContentControl Content="{Binding Dialog}"/>
        </Grid>
    </Grid>
</Window>