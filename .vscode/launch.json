    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Spectabis (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SpectabisNext/bin/Debug/netcoreapp3.1/SpectabisNext.dll",
            "args": [""],
            "cwd": "${workspaceFolder}/src/SpectabisNext",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {"LD_DEBUG":"files"}
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
